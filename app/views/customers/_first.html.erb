
	<%# <div style="background-color:yellow;"> %>
	<div class="col-md-6 col-xl-6">
		<div class="card" id="container">
			<div class="card-body">
				<h5>Customer Details</h5>
				<table class="table table-bordered">
					<thead>
						<tr>
							<th>Customer Name</th>
							<th>Gender</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						<% @customers.each do |c|%>
						<tr>
							<td><%= c.name %></td>
							<td><%= (c.gender==0?"Male":"Female") %></td>
							<%# <td><%= link_to "edit", edit_customer_path(c.id) %>
							<%# <td><%= link_to "edit", {controller:"customers",action:"edit", id:c.id} %>
							<%# <%= button_to 'Destroy',@customer, method: :delete, :onclick => "return confirm('Are you sure you want to delete this post?')" %>
							<td>
								<%= link_to "Edit", edit_customer_path(c.id) %>
								<%= link_to 'Delete', customer_path(c.id), data: { turbo_method: :delete } %>
								<%# <%= link_to "Delete",customer_path(c.id),method: :delete ,:data => {:confirm => 'Are you sure to delete this record?'} %>
								<%= link_to "Add", {controller:"customers",action:"new"}%>
							</td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>