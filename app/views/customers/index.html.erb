<%= link_to "add new record", {controller:"customers",action:"new"}%>
</br>
<table border="1" width="20%" cellpadding="0" cellspacing="0">
  <thead>
    <th>Customer Name</th>
    <th>Gender</th>
    <th>Action</th>
  </thead>
  <tbody>
    <% @customers.each do |c|%>
    <tr>
      <td><%= c.name %></td>
      <td><%= (c.gender==0?"Male":"Female") %></td>
      <td><%= link_to "edit", edit_customer_path(c.id) %></td>
      <td>
        <%= link_to "Delete",customer_path(c.id),method: :delete ,:data => {:confirm => 'Are you sure to delete this record?'} %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>